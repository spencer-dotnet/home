<CascadingValue Value="this">
    @ChildContent
</CascadingValue>

@code {

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }

    #region Expenses
    private List<Expense> expenses = new List<Expense>();

    private List<Expense> DO_NOT_EDIT_EXPENSES = new List<Expense>();

    private Expense expenseToEdit = new Expense();

    public List<Expense> Expenses
    {
        get
        {
            return expenses;
        }
        set
        {
            expenses = value;
            StateHasChanged();
        }
    }

    public Expense ExpenseToEdit
    {
        get
        {
            return expenseToEdit;
        }
        set
        {
            expenseToEdit = value;
            StateHasChanged();
        }
    }

    public List<Expense> DoNotEditListExpenses
    {
        get
        {
            return DO_NOT_EDIT_EXPENSES;
        }
        set
        {
            DO_NOT_EDIT_EXPENSES = value;
            StateHasChanged();
        }

    }

    public void AddExpense(Expense newExpense)
    {
        expenses.Add(newExpense);
        StateHasChanged();
    }

    public void EditExpense(Expense expense)
    {
        expenses[expenses.FindIndex(e => e.Id.Equals(expense.Id))] = expense;
        StateHasChanged();
    }

    public void RemoveExpenseById(string id)
    {
        expenses.RemoveAll(exp => exp.Id == id);
        StateHasChanged();
    }
    #endregion



}
